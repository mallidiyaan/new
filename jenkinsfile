pipeline{
    agent any
    environment{
    DOCKERHUB CREDENTIALS = credentials(mallikarjunsahu-dockerhub)
    }
    stages{
       stage('scm checkout'){
          steps{
          git 'https://github.com/mallidiyaan/new.git'
          }
       }
       stage('build docker image'){
          steps{
             sh 'docker build . -t <mallikarjunsahu>/node-web-app'
          }
       }
       stage('login to dockerhub'){
          steps{
             sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
          }
       }
       stage('push image'){
          steps{
             sh 'docker push mallikarjunsahu/node-web-app:$BUILD-NUMBER'
          }
       }
    }
    post{
        always{
           sh 'docker logout'
        }
    }
}
